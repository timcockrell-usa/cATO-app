{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "module": "ES2020",
    "target": "ES2020",
    "moduleResolution": "bundler",
    "noEmit": true
  },
  "include": [
    "src/components/**/*",
    "src/contexts/**/*", 
    "src/hooks/**/*",
    "src/lib/**/*",
    "src/pages/**/*",
    "src/types/**/*",
    "src/utils/**/*",
    "src/main.tsx",
    "src/App.tsx"
  ],
  "exclude": [
    "src/api/**/*",
    "src/data/**/*",
    "src/services/**/*",
    "src/config/**/*",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx"
  ]
}
